<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leeway.athirapb.Activity.Fragment.AddTicketsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold" android:textColor="@color/white"
            android:background="@color/dracula_primary"

            android:textSize="27dp"

            android:text="ADD TICKET"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/ticket_heading"
        android:hint="ticket_heading"
        android:layout_margin="10dp"

        android:background="@drawable/border"
        android:textSize="12dp"
        android:padding="14dp"
        android:layout_height="wrap_content" />    <EditText
        android:layout_width="match_parent"
        android:id="@+id/ticket_desc"
        android:hint="ticket_desc"
        android:layout_margin="10dp"

        android:background="@drawable/border"
        android:textSize="12dp"
        android:padding="14dp"
        android:layout_height="wrap_content" />


        <EditText
        android:layout_width="match_parent"
        android:id="@+id/assign_date"
        android:hint="assign_date"
            android:layout_margin="10dp"

            android:background="@drawable/border"
            android:textSize="12dp"
            android:padding="14dp"
        android:layout_height="wrap_content" />     <EditText
        android:layout_width="match_parent"
        android:layout_margin="10dp"

        android:background="@drawable/border"
        android:textSize="12dp"
        android:padding="14dp"
        android:id="@+id/submission_date"
        android:hint="submission_date"
        android:layout_height="wrap_content" />

        <com.cunoraz.tagview.TagView
            xmlns:tagview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tag_group"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contextClickable="true"
            tagview:lineMargin="5dp"
            tagview:tagMargin="5dp"
            />



        <com.jaredrummler.materialspinner.MaterialSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="12dp"
            android:layout_margin="10dp"
            android:id="@+id/category"
            android:padding="14dp"
            android:hint="Concept type"/>

        <com.cunoraz.tagview.TagView
            xmlns:tagview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tag_group1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contextClickable="true"
            tagview:lineMargin="5dp"
            tagview:tagMargin="5dp"
            />



        <com.jaredrummler.materialspinner.MaterialSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="12dp"
            android:layout_margin="10dp"
            android:id="@+id/events"
            android:padding="14dp"
            android:hint="Concept type"/>

        <EditText
        android:layout_width="match_parent"
        android:id="@+id/priority"
        android:hint="priority"
            android:layout_margin="10dp"

            android:background="@drawable/border"
            android:textSize="12dp"
            android:padding="14dp"
        android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:id="@+id/new_adds"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:hint="ADD IMAGE"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerView"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="SAVE"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_gravity="center"
        android:id="@+id/savedata"/>
    
    </LinearLayout>
    </ScrollView>


</FrameLayout>
