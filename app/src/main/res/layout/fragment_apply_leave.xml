<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leeway.athirapb.Activity.Fragment.AddTicketsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/dracula_primary"
                android:textStyle="bold"
                android:textSize="27dp"
                android:text=" APPLY LEAVE"/>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/leave_desc"
                android:hint="leave_desc"
                android:layout_margin="10dp"

                android:background="@drawable/border"
                android:textSize="12dp"
               android:padding="14dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/leave_date"
                android:hint="leave_date"
                android:layout_margin="10dp"

                android:background="@drawable/border"
                android:textSize="12dp"
               android:padding="14dp"
                android:layout_height="wrap_content" />     <EditText
            android:layout_width="match_parent"
            android:id="@+id/joining_date"
            android:layout_margin="10dp"

            android:background="@drawable/border"
            android:textSize="12dp"
           android:padding="14dp"
            android:hint="joining_date"
            android:layout_height="wrap_content" />     <EditText
            android:layout_width="match_parent"
            android:id="@+id/leave_days"
            android:hint="leave_days"
            android:layout_margin="10dp"

            android:background="@drawable/border"
            android:textSize="12dp"
           android:padding="14dp"
            android:layout_height="wrap_content" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="SAVE"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_gravity="center"
                android:id="@+id/savedata"/>

        </LinearLayout>
    </ScrollView>


</FrameLayout>
