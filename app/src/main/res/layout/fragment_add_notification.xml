<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leeway.athirapb.Activity.Fragment.AddNotification">

<LinearLayout


    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold" android:textColor="@color/white"
        android:background="@color/dracula_primary"

        android:textSize="27dp"

        android:text="ADD NOTIFICTAION"/>



    <TextView
        android:layout_width="match_parent"
        android:text="Message"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/message"
        android:layout_margin="10dp"
        android:hint="Notification"
        android:background="@drawable/border"
        android:textSize="12dp"
        android:padding="6dp"
        android:layout_height="100dp" />
    <Button
        android:layout_width="wrap_content"
        android:text="ADD NOTIFICTAION"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_gravity="right"
        android:id="@+id/add_noti"
        android:layout_height="wrap_content" />


</LinearLayout>
    <!-- TODO: Update blank fragment layout -->






</FrameLayout>
